        <%for(let i = 0 ; i < product.imagenes.length ; i++) {%>

            <article id="articulo">
                <div>
                    <img class= "img-product" src="/images/products/<%=product.imagenes[i].ruta%>" alt="Imagen del producto <%=product.nombre%>">
                </div>
            </article>
        
        <div class="div-desplazable">
